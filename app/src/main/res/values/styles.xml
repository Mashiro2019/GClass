<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_sea_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="CustomizeTitle">
        <item name="android:textColor">@color/light_sea_blue</item>
    </style>
    <style name="CustomizePageTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:textColor">#171e2f</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomizePageSubTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:textColor">#171e2f</item>
    </style>
    <style name="CustomizeLittleSubTitle">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">2sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="MyCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5sp</item>
        <item name="cardElevation">5sp</item>
        <item name="android:layout_margin">5sp</item>
    </style>
    <style name="CustomizeEditView" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginBottom">2sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:background">@drawable/edit_text_white_background</item>
    </style>
    <style name="CustomizeNavigationDrawerStyle" >
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>